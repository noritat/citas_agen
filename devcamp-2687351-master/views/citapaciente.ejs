<body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary" id="menu">
        <div class="container-md" id="menu">
          <a class="navbar-brand" href="#" id="textom">Â¿Que haremos hoy?</a>
        </div>
      </nav>

      <table class="table table-striped" id="table">
        <h2><div class="title" id="titulo">
            Tus citas son:</div></h2>
        <thead>
          <tr>
            <th></th>
            <th scope="col">Fecha</th>
            <th scope="col">Hora</th>
            <th scope="col">Autorizacion</th>
           
          </tr>
        </thead>
        <tbody>
          <% if(miscitas!=null){ let cuanto=1; miscitas.forEach(miscita=> { %>
          <tr>
            <th scope="row"><%=cuanto++%></th>
            <td><%=miscita.Fecha.toISOString().split('T')[0] %></td>
            <td><%=miscita.Hora%></td>
            <td><%=miscita.Autorizacion%></td>
          </tr>
        
          <%})}%>
        </tbody>
      </table>                        

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

